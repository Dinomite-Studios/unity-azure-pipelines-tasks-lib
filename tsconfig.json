{
    "compilerOptions": {
        "target": "es6",
        "module": "CommonJS",
        "lib": [
            "es2017",
            "es7",
            "es6",
            "dom"
        ],
        "declaration": true,
        "outDir": "dist",
        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "types": [
            "node"
        ]
    },
    "exclude": [
        "node_modules",
        "dist",
        "test"
    ]
}